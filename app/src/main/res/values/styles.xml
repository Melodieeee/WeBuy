<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewStyle">
        <item name="fontFamily">@font/font_family</item>
    </style>

    <style name="DeliveryCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="DeliveryRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="CustomToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorOnPrimary">#D3A588</item>
        <item name="android:textColor">#774E24</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>