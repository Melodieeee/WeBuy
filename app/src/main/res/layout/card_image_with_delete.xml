<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="70dp"
    android:layout_width="70dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/imv_single_product_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/baseline_add_photo_alternate_50" />

    <TextView
        android:id="@+id/tv_cover_img"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Cover Img"
        android:background="@color/cancel_grey"
        android:alpha="0.8"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_gravity="bottom" />
    <Button
        android:id="@+id/btn_delete_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:background="@drawable/baseline_cancel_24"
        android:scaleType="centerCrop" />

</FrameLayout>