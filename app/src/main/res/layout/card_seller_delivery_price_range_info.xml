<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvx_price_range_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Range C$:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvx_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvx_price_range_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvx_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvx_from" />

    <TextView
        android:id="@+id/txv_shipping_fee_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fee C$:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txv_shipping_fee"
        app:layout_constraintTop_toTopOf="@+id/tvx_price_range_label" />

    <TextView
        android:id="@+id/txv_shipping_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txv_shipping_fee_label" />

</androidx.constraintlayout.widget.ConstraintLayout>