<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_seller_order_info"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@color/cancel_grey"
            android:src="@drawable/app_default_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/img_group_product"
            app:layout_constraintTop_toTopOf="@+id/img_group_product">

            <TextView
                android:id="@+id/tv_seller_order_info_product"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Product Name" />

            <TextView
                android:id="@+id/tv_seller_order_info_qty"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Qty" />

            <TextView
                android:id="@+id/tv_seller_order_info_allocate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Allocate" />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>