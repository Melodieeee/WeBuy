<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp">

    <TableLayout
        android:id="@+id/tableLayout_inventory_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:id="@+id/txv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:hint="Style"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="13sp"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txv_in_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:hint="In-Stock"
                android:textSize="13sp"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txv_ordered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:hint="Ordered"
                android:textSize="13sp"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txv_to_allocate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:hint="To allocate" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txv_allocated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:hint="Allocated"
                android:textSize="13sp"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txv_to_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:hint="To order"
                android:textSize="13sp"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txv_to_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:hint="To sell"
                android:textSize="13sp"/>

        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_stock_mgmt"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:background="@drawable/button_solid"
                    android:text="Stock Mgmt"
                    android:textSize="12sp"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_allocate"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_solid"
                    android:text="Allocate"
                    android:textSize="12sp"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_stock_restore"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_solid"
                    android:text="Restore"
                    android:textSize="12sp"
                    android:textColor="@color/white" />

            </LinearLayout>



        </TableRow>

    </TableLayout>




</androidx.cardview.widget.CardView>