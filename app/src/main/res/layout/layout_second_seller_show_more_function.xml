<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_delivery_settings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_local_shipping_24"
        android:gravity="start|center_vertical"
        android:paddingStart="19dp"
        android:text="Delivery Settings"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_payment_settings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_payment_24"
        android:gravity="start|center_vertical"
        android:paddingStart="19dp"
        android:text="Payment Settings"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_store_management"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_store_mall_directory_24"
        android:gravity="start|center_vertical"
        android:paddingStart="19dp"
        android:text="Store management"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_test_page"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_admin_panel_settings_24"
        android:gravity="start|center_vertical"
        android:paddingStart="19dp"
        android:text="Go to test page"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/logout"
        android:contextClickable="@string/test"
        android:drawableLeft="@drawable/baseline_logout_24"
        android:gravity="start|center_vertical"
        android:paddingStart="19dp"
        android:text="Logout"
        android:textColor="@color/black" />

</LinearLayout>