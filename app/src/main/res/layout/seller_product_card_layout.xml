<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seller_product_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="#b8cad4"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <!-- create the container  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Imageview for product default image-->
        <ImageView
            android:id="@+id/iv_seller_product_card_img"
            android:layout_width="110dp"
            android:layout_height="119dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/seller_product_card_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.437" />

        <!-- Textview for Prodcut title-->
        <TextView
            android:id="@+id/seller_product_card_title"
            android:layout_width="251dp"
            android:layout_height="38dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/imgBtn_product_card_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintLeft_toRightOf="@+id/iv_seller_product_card_img"
            app:layout_constraintStart_toEndOf="@+id/iv_seller_product_card_img"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Image button for posting prodcut-->
        <ImageButton
            android:id="@+id/imgBtn_product_card_post"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:background="@null"
            android:contentDescription="To post the product"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgBtn_product_card_edit"
            app:layout_constraintStart_toEndOf="@+id/iv_seller_product_card_img"
            app:layout_constraintTop_toBottomOf="@+id/seller_product_card_title"
            app:layout_constraintVertical_bias="0.542"
            app:srcCompat="@drawable/baseline_add_business_24"
            app:tint="@color/add_business_orange" />

        <!-- Image button for editing prodcut-->
        <ImageButton
            android:id="@+id/imgBtn_product_card_edit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:background="@null"
            android:contentDescription="To edit the product"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgBtn_product_card_delete"
            app:layout_constraintStart_toEndOf="@+id/imgBtn_product_card_post"
            app:layout_constraintTop_toBottomOf="@+id/seller_product_card_title"
            app:srcCompat="@drawable/baseline_edit_24"
            app:tint="@color/android_green" />

        <!-- Image button for deleting prodcut-->
        <ImageButton
            android:id="@+id/imgBtn_product_card_delete"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@null"
            android:contentDescription="To delete the product"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgBtn_product_card_edit"
            app:layout_constraintTop_toBottomOf="@+id/seller_product_card_title"
            app:layout_constraintVertical_bias="0.589"
            app:srcCompat="@drawable/baseline_delete_24"
            app:tint="@color/delete_red" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>