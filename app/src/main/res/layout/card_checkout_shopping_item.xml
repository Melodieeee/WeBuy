<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentRelative"
    android:background="#D3F1F0F0"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image_product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/app_default_image"/>

    <TextView
        android:id="@+id/txv_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@id/image_product_image"
        android:layout_alignParentRight="true"
        android:hint="Product name"/>

    <TextView
        android:id="@+id/txv_style_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@id/image_product_image"
        android:layout_below="@+id/txv_product_name"
        android:layout_alignParentRight="true"
        android:hint="Style: "/>

    <TextView
        android:id="@+id/txv_price_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv_style_option"
        android:layout_alignBottom="@+id/image_product_image"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@id/image_product_image"
        android:ellipsize="end"
        android:hint="C$ "
        android:maxLines="1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txv_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv_style_option"
        android:layout_alignBottom="@+id/image_product_image"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="0dp"
        android:gravity="end"
        android:layout_toRightOf="@id/txv_price_amount"
        android:ellipsize="end"
        android:hint="x ?"
        android:textSize="15sp" />

</RelativeLayout>